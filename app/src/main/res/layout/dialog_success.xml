<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size20"
        android:background="@drawable/bg_border_dialog_success"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="@dimen/size20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/size24"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:tint="@color/text" />

            <ImageView
                android:layout_width="@dimen/size200"
                android:layout_height="@dimen/size200"
                android:layout_centerInParent="true"
                android:importantForAccessibility="no"
                android:src="@drawable/img_success" />
        </RelativeLayout>


        <TextView
            style="@style/TextView_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size20"
            android:gravity="center"
            android:text="@string/txt_success"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/size32"
            tools:ignore="SpUsage" />

        <TextView
            style="@style/TextView_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size20"
            android:gravity="center"
            android:text="@string/txt_your_require_has_been_update_successfully"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/size16"
            tools:ignore="SpUsage" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>